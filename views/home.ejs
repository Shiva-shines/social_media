
        <h1> Codieal / <%= title %> </h1>
           

        <section id="feed-posts">
                <h3>Posts</h3>
                <form action="/posts/create" id="new-post-form" method="post">
                   <textarea name="content"  cols="30" rows="5" placeholder="text here....."></textarea>
                   <input type="submit" value="Post">
                </form>

        <div id="post-div">
                <ul> 
                        <% for  (let post of posts){ %>
                          <li>
                                  <%= post.content %>
                             <br>

                            <small>
                        <%= post.user.name %>

                          </small  >
                          </li>
                          <% } %>
                </ul>
        </div>
        </section>